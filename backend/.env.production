# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database - Railway will provide this automatically
# DATABASE_URL will be provided by Railway PostgreSQL service

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50485760
ALLOWED_FILE_TYPES=.zip,.html,.js,.css

# CORS Configuration - Update with your frontend URL
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration - CHANGE THESE IN PRODUCTION!
ADMIN_EMAIL=admin@gameforge.com
ADMIN_PASSWORD=your-secure-admin-password-change-this